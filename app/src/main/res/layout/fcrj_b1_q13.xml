<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Questão 13"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
    <!-- CONDICAO E RESPOSTA  -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quais são os principais problemas que atingem a comunidade hoje? "
                    android:textAppearance="@style/style_questao"
                    android:paddingBottom="5dp"/>

                <!-- TABULACAO DAS OPCOES -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de energia elétrica"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_a" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energia elétrica de má qualidade"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_b" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de distribuição de água"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_c" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Água de má qualidade"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_d" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de posto de saúde"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_e" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Má qualidade no atendimento de saúde"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_f" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lixo"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_g" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Violência"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_h" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conflitos entre moradores"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_i" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de oportunidades de emprego"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_j" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de escola"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_k"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de transporte escolar"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_l"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de estradas de acesso"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_m"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta de trapiche"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_n"/>





                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outros. Quais?"
                            android:textAppearance="@style/style_resposta"
                            android:id="@+id/opcao_o" />

                        <EditText
                            android:layout_width="241dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/outros_quais"
                            android:textAppearance="@style/style_resposta" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>