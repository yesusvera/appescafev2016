<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_questao"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TITULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Bloco 6 - Questão 6"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Há captura de outras espécies junto ao camarão?"
                android:textAppearance="@style/style_questao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/perg1_rb_resp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Não"
                    android:textAppearance="@style/style_resposta"
                    android:checked="false"
                    android:tag="perg4_cb_1ˆ4->true,perg2_et_resp1->false,perg3_et_resp1->false" />

                <RadioButton
                    android:id="@+id/perg1_rb_resp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Sim. Responda:"
                    android:textAppearance="@style/style_resposta"
                    android:tag="perg4_cb_1ˆ4->false,perg2_et_resp1->true,perg3_et_resp1->true" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="A) Quais são as principais?"
                android:textAppearance="@style/style_questao" />

            <EditText
                android:id="@+id/perg2_et_resp1"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="B) No geral, quanto é capturado por dia (kg)?"
                android:textAppearance="@style/style_questao" />

            <EditText
                android:id="@+id/perg3_et_resp1"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="C) O que é feito?"
                android:textAppearance="@style/style_questao" />

            <CheckBox
                android:id="@+id/perg4_cb_resp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="Uso para consumo da família"
                android:textAppearance="@style/style_resposta"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/perg4_cb_resp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Vendido. Por qual preço (R$/kg)? "
                    android:textAppearance="@style/style_resposta"
                    android:tag="perg4_et_resp3->this"
                    android:enabled="false" />

                <EditText
                    android:id="@+id/perg4_et_resp3"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/perg4_cb_resp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Outros:"
                    android:textAppearance="@style/style_resposta"
                    android:tag="perg4_et_resp5->this"
                    android:enabled="false" />

                <EditText
                    android:id="@+id/perg4_et_resp5"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>