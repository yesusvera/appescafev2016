<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bloco 3 - Questão 08"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUESTAO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/perg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Quais são as atividades importantes que seus pais, avós, bisavós praticavam, que você acha que devem ser transmitidas às futuras gerações? (Pode haver mais de uma resposta)"/>

            <!-- CONDICAO E RESPOSTA 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">


                <!-- TABULACAO DAS OPCOES -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extrativismo/coleta"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp1" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caça"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp2" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pesca"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp3" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fabricação de apetrechos de pesca"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp4" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agricultura"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp5" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arte, música, cantos (Quadrilha, Bumba Boi, Marabaixo, Carimbó, Caixa do Divino, etc.)"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp6" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puxador/a rezador/a, benzedor/a"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp7" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Participar de missas, cultos"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp8"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Participar de festas religiosas"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp9" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Construir canoa, casas e (outras)"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp10" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilizar remédios caseiros, erveiros/as"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_cb_resp11" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outro. Quais?"
                            android:textAppearance="@style/style_resposta"
                            android:id="@+id/perg1_cb_resp12"
                            android:tag="perg1_et_resp13->this" />

                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/perg1_et_resp13"
                            android:enabled="false" />
                        </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>