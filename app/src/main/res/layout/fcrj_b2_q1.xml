<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Questão 01"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- CONDICAO E RESPOSTA  -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qual a sua principal atividade no momento? "
                android:textAppearance="@style/style_questao"
                android:paddingBottom="5dp"/>

            <!-- TABULACAO DAS OPCOES -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Pescador(a)"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_a" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pescador(a) de camarão / caranguejo"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_b" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agricultor(a) familiar / Trabalhador(a) rural"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_c" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extrativista - Açaí"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_d" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extrativista (castanha, castanha de andiroba, buriti, pracaxi, bacaba, taperebá, etc.)"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_e" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criador(a) de gado"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_f" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criador de animais (pato, galinha, porco, boi)"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_g" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artesão / Artesã"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_h" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dona de casa"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_i" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estudante"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_j" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professor(a)"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_k"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aposentado(a) "
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_l"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comerciante "
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_m"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Funcionário(a) público(a)"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_n"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Funcionário(a) de empresa privada"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_o"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outros. Quais?"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/opcao_p" />

                    <EditText
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/outros_quais"
                        android:textAppearance="@style/style_resposta" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>