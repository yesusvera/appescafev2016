<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <!-- CONTAINERa GERAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_questao"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TITULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Bloco 6 - Questão 02"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUESTAO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/perg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Como o senhor realiza este tipo de pescaria (múltipla)? "
                android:textAppearance="@style/style_questao" />

            <!-- CONDICAO E RESPOSTA 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/perg1_cb_resp1"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="Vai e volta no mesmo dia (“ir e vir” ou “bate e volta”) –\n Nesta categoria, quantos dias por semana realiza a pesca? "
                    android:textAppearance="@style/style_resposta"
                    android:tag="perg1_et_resp2->this" />

                <EditText
                    android:id="@+id/perg1_et_resp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/style_resposta"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/perg1_cb_resp3"
                    android:layout_width="352dp"
                    android:layout_height="58dp"
                    android:text="Pesca de decida ou de baixada (pesca que dura mais de um dia fora de casa) \nQuantos dias dura em média a viagem?"
                    android:textAppearance="@style/style_resposta"
                    android:tag="perg1_et_resp4->this,perg1_et_resp5->this,perg1_et_resp6->this" />

                <EditText
                    android:id="@+id/perg1_et_resp4"
                    android:layout_height="match_parent"
                    android:layout_width="214dp"
                    android:textAppearance="@style/style_resposta"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/perg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantas viagens realiza por semana? "
                    android:textAppearance="@style/style_resposta" />

                <EditText
                    android:id="@+id/perg1_et_resp5"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/style_resposta"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/perg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantas viagens realiza por mês? "
                    android:textAppearance="@style/style_resposta" />

                <EditText
                    android:id="@+id/perg1_et_resp6"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/style_resposta"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">


            <TextView
                android:id="@+id/perg4"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Quanto tempo se gasta para chegar ao local de pesca (pesqueiro) mais distante? "
                android:textAppearance="@style/style_questao"
                android:lines="3" />

            <EditText
                android:id="@+id/perg2_et_resp1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/style_resposta" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/perg2_rb_resp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Hora"
                    android:textAppearance="@style/style_resposta" />

                <RadioButton
                    android:id="@+id/perg2_rb_resp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Minutos"
                    android:textAppearance="@style/style_resposta" />
            </RadioGroup>


        </LinearLayout>

        <!-- CONDICAO E RESPOSTA 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/perg2_rb_resp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Não sabe"
                    android:textAppearance="@style/style_resposta" />

                <RadioButton
                    android:id="@+id/perg2_rb_resp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Não respondeu"
                    android:textAppearance="@style/style_resposta" />
            </RadioGroup>


        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">


            <TextView
                android:id="@+id/perg5"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Quanto tempo se gasta para chegar ao local de pesca (pesqueiro) mais perto? "
                android:textAppearance="@style/style_questao"
                android:lines="3" />

            <EditText
                android:id="@+id/perg3_et_resp1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/style_resposta" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/perg3_rb_resp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Hora"
                    android:textAppearance="@style/style_resposta" />

                <RadioButton
                    android:id="@+id/perg3_rb_resp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Minutos"
                    android:textAppearance="@style/style_resposta" />
            </RadioGroup>


        </LinearLayout>

        <!-- CONDICAO E RESPOSTA 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/perg3_rb_resp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Não sabe"
                    android:textAppearance="@style/style_resposta" />

                <RadioButton
                    android:id="@+id/perg3_rb_resp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Não respondeu"
                    android:textAppearance="@style/style_resposta" />
            </RadioGroup>


        </LinearLayout>



    </LinearLayout>

</ScrollView>