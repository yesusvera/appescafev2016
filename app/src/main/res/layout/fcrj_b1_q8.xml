<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Questão 8"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUESTAO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Quais programas sociais (benefícios do governo) atendem
a sua família? (Pode haver mais de uma resposta)"/>

        </LinearLayout>

        <!-- TABULACAO DAS OPCOES -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bolsa Família"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_a"
              />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luz para Todos "
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_b"
              />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bolsa Verde "
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_c"
              />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguro defeso"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_d"
              />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguro desemprego"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_e"
              />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aposentadoria"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_f"
              />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auxílio-doença"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_g"
              />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguro maternidade"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_h"
              />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outros. Quais?"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_i" />


            <EditText
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:id="@+id/outro"
                android:textAppearance="@style/style_resposta"
                android:lines="2" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>