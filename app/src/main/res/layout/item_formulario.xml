<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:background="@color/colorListaPrincipal"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="20dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgSituacaoFormulario" />
            <TextView
                android:id="@+id/txtSituacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txtIdSincronizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@android:color/holo_green_dark"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="10dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo Formulário"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:id="@+id/txtTipoFormulario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtDataFormulario"
            android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="10dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:id="@+id/txtNomeEntrevistado"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/holo_orange_dark"
            android:ems="10"
            android:id="@+id/txtUfMunicipio"
            android:layout_weight="1" />

        </LinearLayout>
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="textPersonName"-->
            <!--android:text="Função"-->
            <!--android:ems="10"-->
            <!--android:id="@+id/txtFuncao"-->
            <!--android:layout_weight="1" />-->

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:paddingRight="10dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:max="100"
                android:progress="50"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarRespostas" />
            <TextView
                android:id="@+id/txtTextoResposta"
                android:text="0 de 0"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgVisualizar"
            android:src="@drawable/prox_icon" />
    </LinearLayout>

</LinearLayout>
