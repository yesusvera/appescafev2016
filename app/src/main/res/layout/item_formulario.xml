<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="30dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/cinzaLista">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgSituacaoFormulario" />
            <TextView
                android:id="@+id/txtSituacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/txtIdSincronizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo FormulÃ¡rio"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="12dp"
                android:id="@+id/txtTipoFormulario" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/txtDataFormulario"
                android:layout_weight="1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtNomeEntrevistado"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/holo_orange_dark"
                    android:ems="10"
                    android:id="@+id/txtUfMunicipio"
                    android:layout_weight="1" />
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:max="100"
                    android:progress="50"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBarRespostas" />
                <TextView
                    android:id="@+id/txtTextoResposta"
                    android:text="0 de 0"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:id="@+id/imgVisualizar"
                android:src="@drawable/prox_icon" />
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>