<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bloco 1 - Questão 14"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUESTAO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/perg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Quais cursos você acha que poderiam ser realizados na comunidade?"/>

        </LinearLayout>

        <!-- TABULACAO DAS OPCOES -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organização, associativismo e cooperativismo"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp1"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comercialização e acesso ao mercado"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp2"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gerenciamento de projetos"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp3"
                      />

                    <RadioButton
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:text="Educação ambiental"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp4"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Segurança no trabalho da pesca"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp5"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Técnicas de pesca"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp6"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manejo do pescado"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp7"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manutenção de embarcação"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp8"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confecção de apetrechos de pesca"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp9"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manejo de produtos extrativistas"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp10"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Produção agrícola"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp11"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outros. Quais? "
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp12"
                      />

                    <EditText
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/perg1_et_resp13"
                        android:textAppearance="@style/style_resposta"
                        android:lines="2" />

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>


</ScrollView>