<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bloco 2 - Questão 01"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUESTAO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/perg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="1. Qual é a sua principal ocupação no momento?"/>

            <!-- RESPOSTA + TABULACAO DAS OPCOES -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp">


            </LinearLayout>

            <!-- CONDICAO E RESPOSTA 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <!-- TABULACAO DAS OPCOES -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pescador(a)"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp1" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pescador(a) de camarão / caranguejo\n[FILTRO – se marcar esta opção,\nseguir o questionário a partir do Bloco 5]"
                        android:textAppearance="@style/style_resposta"
                        android:textColor="#9d08fa"
                        android:id="@+id/perg1_rb_resp2"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agricultor(a) familiar / Trabalhador(a) rural"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp3"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extrativista - Açaí"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp4"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extrativista (castanha, castanha de andiroba, buriti, pracaxi, bacaba, taperebá, etc.)"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp5"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Criador(a) de gado"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp6"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Criador de animais (pato, galinha, porco, boi)"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp7"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artesão / Artesã"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp8"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dona de casa"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp9"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estudante"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp10"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Professor(a)"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp11"
                      />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aposentado(a)"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp12"
                      />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comerciante"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp13"
                      />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Funcionário(a) público(a) "
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp14"
                      />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Funcionário(a) de empresa privada "
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp15"
                      />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outra"
                        android:textAppearance="@style/style_resposta"
                        android:id="@+id/perg1_rb_resp16"
                      />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>